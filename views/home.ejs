<%- include("partials/header"); %>

  <h1>HOME</h1>

  <p>
    <%=HomeContent%>
  </p>

  <% posts.forEach( (post)=> { %>
    <h3>
      <%= post.postTitle %>
    </h3>

    <% if(post.postContent.length> 100) { %>
      <p>
        <%=post.postContent.slice(0, 100) + "..." ; %>
          <a href="/posts/<%= post._id %>">Read more</a>
      </p>
      <% } else {%>
        <p>
          <%= post.postContent %>
        </p>
        <a href="/posts/<%= post._id%>">Read more</a>
        <% } %>
          <% }); %>
            <%- include("partials/footer"); %>