<%- include("partials/header"); %>

<h1>HOME</h1>

<p><%=HomeContent%></p>

<% posts.forEach( (post) => { %>
<h3><%= post.title %></h3>

<% if(post.content.length > 100) { %>
            <p>
              <%=post.content.slice(0, 100) + "..."; %>
              <a href="/posts/<%= post.title %>">Read more</a>
            </p>
    <% } else {%>
        <p><%= post.content %></p>
        <a href="/posts/<%= post.title %>">Read more</a>
    <% } %> 
<% }); %>
<%- include("partials/footer"); %>
